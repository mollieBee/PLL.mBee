# function which return reverse of a string

def isPalindrome(s):
    return s == s[::-1]

if s is not str:  
  raise ValueError
  print("Please enter a string.")


# Driver code
s = "malayalam"
ans = isPalindrome(s)

if ans:
    print("Yes")
else:
    print("No")
#video
import re
def is_palindrome(phrase):
    forwards = ''.join(re.findall(r'[a-z]+', phrase.lower()00
    backwards = forwards[::-1]
    return forwards == backwards
