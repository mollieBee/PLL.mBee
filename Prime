import math
import dataclass

#video without classes
def getPrimeFactors(number):
  factors[]
  divisor = 2
  while divisor is <= number:
    if number % divisor == 0:
      factors.append(divisor)
      number = number//divisor
    else:
      divisor += 1
return factors


@dataclass
class PNumber():
  num: int
  i: int

  def __init__prime_find:
    if isinstance is not int
      raise ValueError
      print("Please enter a number  - and a number that is not a decimal.")
    if num == 1:
    print(num, "is not a prime number")
    elif num > 1:
    # check for factors
    for i in range(2, num):
        if (num % i) == 0:
            # if factor is found, set flag to True
            flag = True
            # break out of loop
            break

    # check if flag is True
    if flag:
        print(num, "is not a prime number")
    else:
        print(num, "is a prime number")
    
    
