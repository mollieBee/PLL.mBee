#video version

def schedule_function(event_time, function, *args):
  s = sched.sceduler(time.time, time.sleep)
  s.enterabs(event_time, 1, function, argument = args)
  print(f'{function.__name__}() scheduled for {time.asctime(time.localtime)}
  s.run()
