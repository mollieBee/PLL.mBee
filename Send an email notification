import smtplib
from email.mime.text import MIMEText

# Configuration
#smtp_server = "live.smtp.mailtrap.io"
login = "mollie_bruno@nal.com"  # Your login generated by Mailtrap
password = input("Please enter your email password")  # Your password generated by Mailtrap

sender_email = input("Please enter sender's email address")
receiver_email = input("Please enter where you want the email to be sent to"
# Plain text content
text = input("Please enter the content of your email")

# Create MIMEText object
message = MIMEText(text, "plain")
message["Subject"] = "Plain text email"
message["From"] = sender_email
message["To"] = receiver_email

# Send the email
with smtplib.SMTP(smtp_server, port) as server:
    server.starttls()  # Secure the connection
    server.login(login, password)
    server.sendmail(sender_email, receiver_email, message.as_string())

print('Sent')
